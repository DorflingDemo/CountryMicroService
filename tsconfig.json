{
  "compilerOptions": {
    "target": "ES2016", // Or a newer target like ES2020
    "module": "CommonJS", // Standard module system for Node.js
    "outDir": "./dist", // Optional: specify output directory if compiling
    "rootDir": "./",    // Root directory of source files
    "strict": true,     // Enable strict type checking
    "esModuleInterop": true, // Allows default imports from commonjs modules
    "skipLibCheck": true, // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true // Ensure consistent file casing
  },
  "include": [
    "features/**/*.ts" // Include TypeScript files in the features directory
  ],
  "exclude": [
    "node_modules"
  ]
}
