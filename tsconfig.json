{
  "compilerOptions": {
    "target": "ES2016", // Or a newer target like ES2020
    "module": "CommonJS", // Standard module system for Node.js
    "outDir": "./dist", // Specify output directory for compiled JS
    "rootDir": ".", // Explicitly set root directory to project root
    "strict": true,     // Enable strict type checking
    "esModuleInterop": true, // Allows default imports from commonjs modules
    "skipLibCheck": true, // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Ensure consistent file casing
    "resolveJsonModule": true // Allow importing JSON files
  },
  "include": [
    "src/**/*.ts", // Include TypeScript files in the src directory
    "features/**/*.ts" // Include TypeScript files for tests
  ],
  "exclude": [
    "node_modules"
  ]
}
